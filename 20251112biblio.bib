	journal = {Physics and Chemistry of the Earth, Parts A/B/C},
	author = {Che Azmi, Nor Azizah and A Rashid, Ahmad Safuan and Mohd Apandi, Nazirah and Rasib, Abd Wahid and Mohd Nasir, Mohd Nazri and Zainorabidin, Adnan and Mohamed, Mohamad Sofi and Mat Shah, Muhammad Amir and Che Lat, Diana and Ismail, Afiqah},
